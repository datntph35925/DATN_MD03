<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/layoutChooseLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog"
        android:orientation="horizontal"
        android:padding="5dp"
        >

        <ImageView
            android:id="@+id/img_Order_Dt"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idPR"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idSL"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/NameProduct_dt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên của SP"
                android:textSize="20dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSize_dt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Size"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvColor_dt"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginTop="6dp"
                    android:text=""
                    android:textSize="15dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text=", "
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/tvSL_dt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Số lượng"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/priceOrder_dt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="$ 100"
                android:textColor="#ff00"
                android:textSize="20dp" />
<!--            <TextView-->
<!--                android:id="@+id/tv_km_dt"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Giảm giá : ..."-->
<!--                android:textStyle="bold"-->
<!--                android:layout_marginLeft="50dp"-->
<!--                android:textColor="#ff00"-->
<!--                android:textSize="20dp"/>-->
        </LinearLayout>
    </LinearLayout>
    <!-- RatingBar for star rating -->
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:rating="0"
        android:layout_gravity="center"
        android:visibility="gone"
        />
    <EditText
        android:id="@+id/edDanhGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Đánh giá"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/btnDanhGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Gửi đánh giá"
        android:visibility="gone"
        />
</LinearLayout>