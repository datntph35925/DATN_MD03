<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity_CTDH_DaGiao">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Chi tiết đơn hàng"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.405"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvCTDH_DaGiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin liên lạc"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/btn_4"
                    />

                <TextView
                    android:id="@+id/tvname1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên người nhận"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/img1"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tvName_CTDH_DaGiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do Minh Hiếu"
                    app:layout_constraintTop_toBottomOf="@id/tvname1"
                    app:layout_constraintLeft_toRightOf="@id/img1"
                    android:layout_marginLeft="10dp"
                    />


                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:layout_constraintTop_toBottomOf="@id/img1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/phone"
                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:id="@+id/tvname2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại"
                    app:layout_constraintTop_toBottomOf="@id/tvName_CTDH_DaGiao"
                    app:layout_constraintLeft_toRightOf="@id/img2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tvPhone_CTDH_DaGiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="099999999999"
                    app:layout_constraintTop_toBottomOf="@id/tvname2"
                    app:layout_constraintLeft_toRightOf="@id/img2"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    />


                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:layout_constraintTop_toBottomOf="@id/img2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/adress"
                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:id="@+id/tvname3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ"
                    app:layout_constraintTop_toBottomOf="@id/tvPhone_CTDH_DaGiao"
                    app:layout_constraintLeft_toRightOf="@id/img3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tvAdress_CTDH_DaGiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khu 3, thị trấn Trạm Trôi, huyện Hoài Đức, Hà Nội"
                    app:layout_constraintTop_toBottomOf="@id/tvname3"
                    app:layout_constraintLeft_toRightOf="@id/img3"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    />


                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:layout_constraintTop_toBottomOf="@id/img3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/payment"
                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:id="@+id/tvname4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phương thức thanh toán"
                    app:layout_constraintTop_toBottomOf="@id/tvAdress_CTDH_DaGiao"
                    app:layout_constraintLeft_toRightOf="@id/img4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tvPayMent_CTDH_DaGiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thanh toán khi nhận hàng"
                    app:layout_constraintTop_toBottomOf="@id/tvname4"
                    app:layout_constraintLeft_toRightOf="@id/img4"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tvTT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvPayMent_CTDH_DaGiao"
                    android:text="Trạng thái đơn hàng:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginTop="16dp"
                    />

                <TextView
                    android:id="@+id/tvTrangThai_CTDH_ChoXacNhan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chờ xác nhận"
                    app:layout_constraintTop_toBottomOf="@id/tvPayMent_CTDH_DaGiao"
                    app:layout_constraintLeft_toRightOf="@id/tvTT"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="18dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />


                <TextView
                    android:id="@+id/tvTCP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTT"
                    android:text="Tổng chi phí:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginTop="16dp"
                    />

                <TextView
                    android:id="@+id/tvTCP_CTDH_DaGiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10000$"
                    app:layout_constraintTop_toBottomOf="@id/tvTT"
                    app:layout_constraintLeft_toRightOf="@id/tvTCP"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="18dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />

                <Button
                    android:id="@+id/btnDaNhanHang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTCP"
                    android:layout_marginTop="16dp"
                    android:text="Đã nhận được hàng"
                    android:textSize="20dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>