<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.Activity_CTDH_DaGiao">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <!-- Header Title -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Chi tiết đơn hàng"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.405"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvCTDH_DaGiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Contact Information Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin liên lạc"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Contact Information -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Recipient Name -->
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/btn_4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvname1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên người nhận"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/img1"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:id="@+id/tvName_CTDH_DaGiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do Minh Hiếu"
                    app:layout_constraintStart_toEndOf="@id/img1"
                    app:layout_constraintTop_toBottomOf="@id/tvname1"
                    android:layout_marginStart="10dp" />

                <!-- Phone Number -->
                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/phone"
                    app:layout_constraintTop_toBottomOf="@id/img1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/tvname2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/img2"
                    app:layout_constraintTop_toTopOf="@id/img2"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:id="@+id/tvPhone_CTDH_DaGiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="099999999999"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/img2"
                    app:layout_constraintTop_toBottomOf="@id/tvname2"
                    android:layout_marginStart="10dp" />

                <!-- Address -->
                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/adress"
                    app:layout_constraintTop_toBottomOf="@id/img2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/tvname3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/img3"
                    app:layout_constraintTop_toTopOf="@id/img3"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:id="@+id/tvAdress_CTDH_DaGiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khu 3, thị trấn Trạm Trôi, huyện Hoài Đức, Hà Nội"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/img3"
                    app:layout_constraintTop_toBottomOf="@id/tvname3"
                    android:layout_marginStart="10dp" />

                <!-- Payment Method -->
                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/payment"
                    app:layout_constraintTop_toBottomOf="@id/img3"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/tvname4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phương thức thanh toán"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/img4"
                    app:layout_constraintTop_toTopOf="@id/img4"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:id="@+id/tvPayMent_CTDH_DaGiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thanh toán khi nhận hàng"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/img4"
                    app:layout_constraintTop_toBottomOf="@id/tvname4"
                    android:layout_marginStart="10dp" />

                <!-- Order Status -->
                <TextView
                    android:id="@+id/tvTT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái đơn hàng:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvPayMent_CTDH_DaGiao"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/tvTrangThai_CTDH_DaGiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã giao"
                    android:textColor="#4CAF50"
                    app:layout_constraintStart_toEndOf="@id/tvTT"
                    app:layout_constraintTop_toTopOf="@id/tvTT"
                    android:layout_marginStart="8dp"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <!-- Total Cost -->
                <TextView
                    android:id="@+id/tvTCP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng chi phí:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTT"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/tvTCP_CTDH_DaGiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10000$"
                    app:layout_constraintStart_toEndOf="@id/tvTCP"
                    app:layout_constraintTop_toTopOf="@id/tvTCP"
                    android:layout_marginStart="8dp"
                    android:textSize="16dp"
                    android:textColor="#FF0000"
                    android:textStyle="bold" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
