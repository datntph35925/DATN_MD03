<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Container for Product Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Image and Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Image Section -->
                <ImageView
                    android:id="@+id/img_byer"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo1"
                    android:contentDescription="Product Image" />

                <!-- Text Details Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_nameByer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tên người mua: John Doe"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/adresByer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ: 123 Đường ABC, Quận 9"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/phoneByer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SĐT: 0901234567"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/soluong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số lượng: 2"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tv_paid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Đã thanh toán bằng ví"
                        android:textSize="14sp"
                        android:textColor="#4CAF50"
                        android:visibility="gone"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Tổng cộng Section -->
            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng cộng: 1.000.000 VNĐ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF0000"
                android:layout_marginTop="12dp" />

            <!-- Date Section -->
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày: 20/12/2023"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="end"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
