<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.DangKy"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- Nút Back -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back"
        android:contentDescription="Back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backButton"

        app:srcCompat="@drawable/logo1" />

    <!-- Nội dung chính -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:layout_marginBottom="12dp"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tên -->
        <TextView
            android:id="@+id/textName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView3" />

        <EditText
            android:id="@+id/editTextTen"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/edittext_background"
            android:hint="Nhập tên của bạn"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/textName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Email -->
        <TextView
            android:id="@+id/textEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/editTextTen"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextEmail2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/edittext_background"
            android:hint="Nhập email của bạn"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/textEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Mật khẩu -->
        <TextView
            android:id="@+id/textPassword2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="6dp"
            app:layout_constraintTop_toBottomOf="@id/editTextEmail2"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextPassword2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/edittext_background"
            android:hint="Nhập mật khẩu của bạn"
            android:padding="12dp"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/textPassword2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Nhập lại mật khẩu -->
        <TextView
            android:id="@+id/textRePassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nhập lại Mật khẩu"
            android:textColor="#1F1F1F"
            android:textSize="16sp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/editTextPassword2"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextRePassword"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/edittext_background"
            android:hint="Nhập lại mật khẩu của bạn"
            android:padding="12dp"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"

            app:layout_constraintTop_toBottomOf="@id/textRePassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Nút Đăng ký -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDangKy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            android:text="Đăng Ký"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/editTextRePassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
