<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity_ChiTietSP"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    >

    <!-- Nút Quay Lại -->
    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back"
        android:contentDescription="Back Button" />

    <!-- Tiêu Đề -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Chi tiết sản phẩm"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imgBack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Nút Yêu Thích red -->
    <ImageView
        android:id="@+id/btnYeuThich_CTSP_red"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/imgBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/favorite_red"
        android:visibility="gone"
        />
    <!-- Nút Yêu Thích -->
    <ImageView
        android:id="@+id/btnYeuThich_CTSP"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/imgBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/yeuthich"
        android:contentDescription="Favorite Button"
        android:layout_marginTop="-7dp"
        />

    <!-- Nội dung cuộn -->
    <ScrollView
        android:id="@+id/sc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/imgBack"
        app:layout_constraintBottom_toTopOf="@id/rl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- Hình ảnh sản phẩm -->
<!--            <ImageView-->
<!--                android:id="@+id/img_SPCT"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="200dp"-->
<!--                android:layout_marginTop="16dp"-->
<!--                android:scaleType="centerCrop"-->
<!--                app:srcCompat="@drawable/nice_shoe"-->
<!--                android:contentDescription="Product Image" />-->

            <!-- Slideshow Section -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_corners"
                android:clipToOutline="true">

                <!-- Slideshow Image -->
                <ImageView
                    android:id="@+id/imageViewSlider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Slideshow Image" />

                <!-- Previous Button -->
                <ImageButton
                    android:id="@+id/btnPrev"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="start|center_vertical"
                    android:src="@drawable/ic_prev"
                    android:background="@color/lightGrey"
                    android:contentDescription="Previous Slide" />

                <!-- Next Button -->
                <ImageButton
                    android:id="@+id/btnNext"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/ic_next"
                    android:background="@color/light_gray"
                    android:contentDescription="Next Slide" />
            </FrameLayout>

            <!-- Tên sản phẩm -->
            <TextView
                android:id="@+id/tvTen_SPCT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Tên sản phẩm"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Giá sản phẩm -->
            <TextView
                android:id="@+id/tvGia_SPCT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1000$"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Mô tả sản phẩm -->
            <TextView
                android:id="@+id/tvMoTa_SPCT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Mô tả sản phẩm chi tiết..."
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Đánh giá sản phẩm -->
            <TextView
                android:id="@+id/tvDanhGia_SPCT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Đánh giá sản phẩm:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvDanhGia_SPCT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Nút Chat -->
        <ImageView
            android:id="@+id/btnBoxChat_CTSP"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/boxchat"
            android:contentDescription="Chat Button" />

        <!-- Nút Giỏ Hàng -->
        <ImageView
            android:id="@+id/btnGioHang_CTSP"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/btnBoxChat_CTSP"
            android:layout_marginStart="32dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/giohang"
            android:contentDescription="Cart Button" />

        <!-- Nút Mua Ngay -->
        <Button
            android:id="@+id/btnMuaHang_CTSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"
            android:text="Mua ngay"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
