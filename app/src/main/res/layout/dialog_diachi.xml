<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tv_title_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm địa chỉ"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingVertical="8dp" />

    <!-- Nút Lấy vị trí -->
    <Button
        android:id="@+id/btnLayViTri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lấy địa chỉ từ vị trí của bạn"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        android:paddingVertical="12dp"
        android:elevation="4dp" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_d9d"
        android:layout_marginVertical="16dp" />

    <!-- Tên người nhận -->
    <EditText
        android:id="@+id/edt_tendiachi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên người nhận..."
        android:padding="12dp"
        android:textSize="16sp"
        android:background="@drawable/cus_bgr_edt"
        android:layout_marginBottom="16dp" />

    <!-- Địa chỉ -->
    <EditText
        android:id="@+id/edt_diachi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Địa chỉ..."
        android:padding="12dp"
        android:textSize="16sp"
        android:background="@drawable/cus_bgr_edt"
        android:layout_marginBottom="16dp" />

    <!-- Số điện thoại -->
    <EditText
        android:id="@+id/edt_sodienthoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số điện thoại..."
        android:padding="12dp"
        android:textSize="16sp"
        android:background="@drawable/cus_bgr_edt"
        android:layout_marginBottom="16dp" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_d9d"
        android:layout_marginVertical="16dp" />

    <!-- Nút hành động -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">

        <!-- Nút Hủy -->
        <Button
            android:id="@+id/btn_cancel_diaSp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/lightGrey"
            android:text="HỦY"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:paddingVertical="12dp"
            android:elevation="2dp" />

        <!-- Nút Lưu -->
        <Button
            android:id="@+id/btn_save_diaSp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:text="LƯU"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:paddingVertical="12dp"
            android:elevation="2dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>
