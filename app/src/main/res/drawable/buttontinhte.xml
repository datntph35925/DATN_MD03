<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E3F2FD"/> <!-- Xanh nhạt khi nhấn -->
            <corners android:radius="12dp"/> <!-- Bo góc -->
        </shape>
    </item>

    <!-- Trạng thái bình thường -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Trắng bình thường -->
            <corners android:radius="12dp"/> <!-- Bo góc -->
            <stroke android:width="2dp" android:color="#4A90E2"/> <!-- Viền xanh -->
        </shape>
    </item>
</selector>
